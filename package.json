{
  "name": "npm_boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:html": "ejs-cli --base-dir src/ejs/page/ '*.ejs' --out dist/html/",
    "build:css": "postcss src/pcss/'*.css' --d dist/css/",
    "build:js": "mkdir -p dist/js && browserify -t babelify src/js/main.js | uglifyjs -c -m > dist/js/main.js",
    "build:img": "imagemin src/img/* -o dist/img",
    "clean": "rimraf dist/{css/*,js/*,html/*,img/*}",
    "build": "npm run clean && npm-run-all -p build:*",
    "watch:html": "chokidar src/ejs/* -c 'npm run build:html'",
    "watch:css": "chokidar src/pcss/* -c 'rimraf dist/css/* && npm run build:css'",
    "watch:js": "watchify -t babelify src/js/main.js -o 'uglifyjs -c -m > dist/js/main.js' -v",
    "watch:img": "onchange 'src/img' -e '**/*.DS_Store' -- npm run build:img",
    "watch:server": "browser-sync start -s ./dist/html -f 'dist,**/*.html, !node_modules/**/*'",
    "watch": "npm-run-all -p watch:*",
    "postinstall": "npm run build && npm run watch"
  },
  "keywords": [],
  "author": "aya_arai",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^8.3.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browser-sync": "^2.24.4",
    "browserify": "^16.2.0",
    "chokidar-cli": "^1.2.0",
    "csswring": "^6.0.3",
    "ejs-cli": "^2.0.1",
    "imagemin-cli": "^3.0.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.0.0",
    "postcss-cli": "^5.0.0",
    "postcss-import": "^11.1.0",
    "postcss-nested": "^3.0.0",
    "rimraf": "^2.6.2",
    "uglify-es": "^3.3.9",
    "watchify": "^3.11.0"
  }
}
